<Application
    x:Class="LXIntegratedNavigation.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LXIntegratedNavigation.WPF"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/Controls/MenuButtons.xaml" />
                <ResourceDictionary Source="Styles/Windows/WindowTemplate.xaml" />
                <!--  WPF UI  -->
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ui:ThemesDictionary Theme="Light" />
                        <ui:ControlsDictionary />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
                <ResourceDictionary>
                    <Style TargetType="Control">
                        <Setter Property="FontFamily" Value="Microsoft Yahei UI Light" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
