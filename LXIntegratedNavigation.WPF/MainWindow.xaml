    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="gridMenu">
            <ToggleButton
                x:Name="btnMenu"
                Margin="0,5,10,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                IsChecked="True"
                Style="{StaticResource MenuIconStyle}">
                <ToggleButton.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard>
                            <Storyboard x:Name="HideStackPanel">
                                <DoubleAnimation
                                    BeginTime="0:0:0"
                                    Storyboard.TargetName="gridMenu"
                                    Storyboard.TargetProperty="Width"
                                    From="200"
                                    To="50"
                                    Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <BackEase Amplitude="0.1" EasingMode="EaseInOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard>
                            <Storyboard x:Name="ShowStackPanel">
                                <DoubleAnimation
                                    BeginTime="0:0:0"
                                    Storyboard.TargetName="gridMenu"
                                    Storyboard.TargetProperty="Width"
                                    From="50"
                                    To="200"
                                    Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <BackEase Amplitude="0.1" EasingMode="EaseInOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>
            <RadioButton
                Content="开始"
                IsChecked="True"
                Style="{StaticResource MenuRadioButtonStyle}"
                Tag="{x:Static ui:SymbolRegular.Play28}" />
            <RadioButton
                Content="轨迹"
                Style="{StaticResource MenuRadioButtonStyle}"
                Tag="{x:Static ui:SymbolRegular.ArrowRouting24}" />
            <RadioButton
                Content="统计"
                Style="{StaticResource MenuRadioButtonStyle}"
                Tag="{x:Static ui:SymbolRegular.ChartMultiple24}" />
            <RadioButton
                Content="导出"
                Style="{StaticResource MenuRadioButtonStyle}"
                Tag="{x:Static ui:SymbolRegular.Share24}" />
        </StackPanel>
        <!--  Dock Window Area  -->
        <ui:Snackbar
            Name="Snackbar"
            Grid.Column="1"
            Width="390"
            HorizontalAlignment="Right"
            Panel.ZIndex="1000"
            FontFamily="Microsoft Yahei UI Light"
            FontSize="20"
            Timeout="3900" />
        <syncfusion:DockingManager
            x:Name="DockingManager"
            Grid.Column="1"
            Background="White"
            EnableMouseHoverBackground="True"
            IsVS2010DraggingEnabled="True"
            ItemsSource="{Binding DockItems}"
            MaximizeButtonEnabled="True"
            MinimizeButtonEnabled="True"
            UseDocumentContainer="True" />
