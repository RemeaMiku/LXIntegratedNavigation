<Window
    x:Class="LXIntegratedNavigation.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aakthemes="http://aakstudio.themes.avalondock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LXIntegratedNavigation.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vw="clr-namespace:LXIntegratedNavigation.WPF.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="450"
    MinWidth="{Binding WindowMinWidth}"
    MinHeight="{Binding WindowMaxHeight}"
    d:DataContext="{d:DesignInstance Type=vw:MainWindowViewModel}"
    AllowsTransparency="True"
    Template="{DynamicResource MainWindowTemplate}"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="{Binding CaptionHeight}"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="{Binding ResizeBorderThickness}" />
    </WindowChrome.WindowChrome>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="gridMenu">
            <ToggleButton
                x:Name="btnMenu"
                Margin="0,5,10,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                IsChecked="True"
                Style="{StaticResource MenuIconStyle}">
                <ToggleButton.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard>
                            <Storyboard x:Name="HideStackPanel">
                                <DoubleAnimation
                                    BeginTime="0:0:0"
                                    Storyboard.TargetName="gridMenu"
                                    Storyboard.TargetProperty="Width"
                                    From="200"
                                    To="50"
                                    Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <BackEase Amplitude="0.1" EasingMode="EaseInOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard>
                            <Storyboard x:Name="ShowStackPanel">
                                <DoubleAnimation
                                    BeginTime="0:0:0"
                                    Storyboard.TargetName="gridMenu"
                                    Storyboard.TargetProperty="Width"
                                    From="50"
                                    To="200"
                                    Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <BackEase Amplitude="0.1" EasingMode="EaseInOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>
            <RadioButton
                Content="开始"
                IsChecked="True"
                Style="{StaticResource MenuRadioButtonStyle}" />
            <RadioButton Content="INS" Style="{StaticResource MenuRadioButtonStyle}" />
            <RadioButton Content="GNSS" Style="{StaticResource MenuRadioButtonStyle}" />
            <RadioButton Content="LC" Style="{StaticResource MenuRadioButtonStyle}" />
        </StackPanel>
        <DockingManager Grid.Column="1" Background="White">
            <DockingManager.Theme>
                <aakthemes:VisualStudio2022Light />
            </DockingManager.Theme>
            <LayoutRoot>
                <LayoutPanel Orientation="Horizontal">
                    <LayoutPanel Orientation="Vertical">
                        <LayoutDocumentPaneGroup>
                            <LayoutDocumentPane x:Name="DocumentPane">
                                <LayoutDocument Title="开始" Content="{x:Static local:Provider.StartPage}" />
                            </LayoutDocumentPane>
                        </LayoutDocumentPaneGroup>
                        <LayoutAnchorablePaneGroup
                            DockHeight="200"
                            DockMinHeight="100"
                            FloatingHeight="180">
                            <LayoutAnchorablePane>
                                <LayoutAnchorable
                                    Title="输出"
                                    CanAutoHide="False"
                                    CanClose="True">
                                    <TextBlock Padding="5" Text="输出" />
                                </LayoutAnchorable>
                                <LayoutAnchorable
                                    Title="统计"
                                    CanAutoHide="False"
                                    CanClose="True">
                                    <TextBlock Padding="5" Text="统计" />
                                </LayoutAnchorable>
                            </LayoutAnchorablePane>
                        </LayoutAnchorablePaneGroup>
                    </LayoutPanel>
                    <LayoutAnchorablePaneGroup
                        DockMinWidth="100"
                        DockWidth="200"
                        FloatingWidth="270">
                        <LayoutAnchorablePane DockWidth="240" FloatingWidth="20">
                            <LayoutAnchorable
                                Title="属性"
                                CanAutoHide="True"
                                CanClose="True" />
                        </LayoutAnchorablePane>
                    </LayoutAnchorablePaneGroup>
                </LayoutPanel>
            </LayoutRoot>
        </DockingManager>
    </Grid>
</Window>